{{> header}}
<section id="viewShop">
    <h1>Products</h1>
    <div class="products" id="shopProducts">
        <table>
            <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each products}}
            <tr data-id="{{id}}">
                <td>{{product}}</td>
                <td>{{description}}</td>
                <td>{{price}}</td>
                <td><button class="purchaseBtn">Purchase</button></td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</section>
{{> footer}}