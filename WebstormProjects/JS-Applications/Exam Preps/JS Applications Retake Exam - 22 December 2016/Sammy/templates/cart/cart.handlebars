{{> header}}
<section id="viewCart">
    <h1>My Cart</h1>
    <div class="products" id="cartProducts">
        <table>
            <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each products}}
            <tr data-id="{{id}}">
                <td>{{product}}</td>
                <td>{{description}}</td>
                <td>{{quantity}}</td>
                <td>{{totalPrice}}</td>
                <td><button class="discardBtn">Discard</button></td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</section>
{{> footer}}