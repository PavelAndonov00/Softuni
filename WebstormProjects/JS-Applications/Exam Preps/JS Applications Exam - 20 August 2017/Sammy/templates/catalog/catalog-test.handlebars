{{> header}}
{{> menu}}
<section id="viewCatalog">
    <div class="posts">
        {{#each posts}}
            <article class="post">
                <div class="col rank">
                    <span>{{counter}}</span>
                </div>
                <div class="col thumbnail">
                    <a href="{{url}}">
                        <img src="{{imageUrl}}">
                    </a>
                </div>
                <div class="post-content">
                    <div class="title">
                        <a href="{{url}}">
                            {{title}}
                        </a>
                    </div>
                    <div class="details">
                        <div class="info">
                            submitted {{date}} ago by {{author}}
                        </div>
                        <div class="controls">
                            <ul data-id="{{id}}">
                                <li class="action"><a class="commentsLink" href="#/comments">comments</a></li>
                                <li class="action"><a class="editLink" href="#/edit">edit</a></li>
                                <li class="action"><a class="deleteLink" href="#/delete">delete</a></li>
                            </ul>
                        </div>

                    </div>
                </div>
            </article>
        {{/each}}
    </div>
</section>
{{> footer}}