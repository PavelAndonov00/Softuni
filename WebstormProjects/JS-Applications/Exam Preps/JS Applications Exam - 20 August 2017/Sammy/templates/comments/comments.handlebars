{{> header}}
{{> menu}}
<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">
                   {{title}}
                </a>
            </div>
            <div class="details">
                <p>{{description}}</p>
                <div class="info">
                    submitted {{date}} ago by {{author}}
                </div>
                <div class="controls">
                    <ul>
                        <li class="action"><a class="editLink" href="#/editPost/{{postId}}">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#/deletePost/{{postId}}">delete</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form action="#/addComment" method="post" id="commentForm">
            <input type="hidden" name="postId" value="{{postId}}">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input  type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each comments}}
    <article class="post post-content">
        <p>{{content}}</p>
        <div class="info">
            submitted {{commentDate}} ago by {{commentAuthor}} | <a href="#/deleteComment/{{commentId}}" class="deleteCom">delete</a>
        </div>
    </article>
    {{/each}}
</section>
{{> footer}}