{{> header}}
{{> menu}}
<section id="viewMyPosts">
    <div class="post post-content">
        <h1>Your Posts</h1>
    </div>
    <div class="posts">
        {{#each posts}}
        <article class="post">
            <div class="col rank">
                <span>{{counter}}</span>
            </div>
            <div class="col thumbnail">
                <a href="{{url}}">
                    <img src="{{imageUrl}}">
                </a>
            </div>
            <div class="post-content">
                <div class="title">
                    <a href="{{url}}">
                        {{title}}
                    </a>
                </div>
                <div class="details">
                    <div class="info">
                        submitted {{date}} ago by {{author}}
                    </div>
                    <div class="controls">
                        <ul data-id="{{id}}">
                            <li class="action"><a class="commentsLink" href="#/postComments/{{id}}">comments</a></li>
                            <li class="action"><a class="editLink" href="#/editPost/{{id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/deletePost/{{id}}">delete</a></li>
                        </ul>
                    </div>

                </div>
            </div>
            <div class="clear"></div>
        </article>
        {{/each}}
    </div>
</section>
{{> footer}}