{{> header}}
{{> menu}}
<section id="viewMe">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>

            <form action="#/me" method="post" id="formSubmitChirpMy" class="chirp-form">
                <textarea name="text" class="chirp-input"></textarea>
                <input class="chirp-submit" id="btnSubmitChirpMy" value="Chirp" type="submit">
            </form>

            <div id="myStats" class="user-details">
                <span>{{chirpersCount}} chirps</span> | <span>{{followingCount}} following</span> | <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="myChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            {{#if logged}}
                {{#each userChirps}}
                        <article class="chirp" data-id="{{id}}">
                            <div class="titlebar">
                                <a href="#/author" class="chirp-author">{{author}}</a>
                                <span class="chirp-time">{{time}}</span>
                            </div>
                            <a class="deleteBtn" href="#/deleteChirp/{{id}}">delete</a>
                            <p>{{text}}</p>
                        </article>
                {{/each}}
            {{else}}
                <div class="chirp"><span class="loading">No chirps in database</span></div>
            {{/if}}
        </div>
    </div>
</section>
{{> footer}}